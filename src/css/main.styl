@import './test.css';

body {
font-family: 'Roboto', sans-serif;
  font-weight: 300;
  font-size: 1em;
}

h1 {
  margin: 1rem;
}

a {
  color: #006FCF;
}

.tracing-image {
  background: url(/assets/tracing-image.jpg) no-repeat;
  background-size: 100%;
  height: 3108px;
}
.menu-banner {
  display: flex;
}
.brand-logo {
  width: 85%;
}
.drop-down-button {
  width:7%;
  margin:auto;
  cursor: pointer;
}

.hide-menu {
  display: none;
}
.dropdown-menu {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
.dropdown-menu ul{
  margin: 0;
  color: #006fcf;
  font-weight: normal;
  font-family: BentonSans-Lt, helvetica, sans-serif;
  font-size: 4px;
  padding: 4px;
  list-style: none;
  background: #fff;
}
.dropdown-menu ul li{
  height: 10px;
  border-bottom: gray solid 0.1px;
  margin: 4px;
}

.hero{
  color: #fff;
  height: 204px;
  padding: 32px 19px;
  position: relative;

  background: url(/assets/tracing-image.jpg) no-repeat;
  background-size: 100%;
  background-position: 0px -68px;
}

.hero-header {
  font-weight: 300;
  font-size: 1.7em;
  line-height: 1.3;
  letter-spacing: 0.7px;
  margin-bottom: 22px;
}

.hero-sub-header {
  font-size: .9em;
  font-weight: 300;
  line-height: 1.4em;
  margin-bottom: 16px;
}

.hero-tagline {
  font-size: 1.24em;
}

.square-btns {
  width: 100%;
  height: 222px;
  background-color: #F00;
  /*display: none;*/
}

.square-btn {
  float: left;
  height: 111px;
  width: 125px;
  background-color: #0F0;
}
.square-btn.blue {
  background-color: #1271cd;
}
.get-started {
  background-color: #fff;
  padding: 10% 5%;
}

.get-started .head {
  font-family: BentonSans-Book;
  font-size: 24px;
  color: #4E5356;
  line-height: 30px;
}

.get-started .text {
  font-family: BentonSans-Book;
  font-size: 14px;
  color: #727272;
  letter-spacing: 0;
  line-height: 24px;
}

.get-started .card:first-child {
  margin-right: 5%;
}

.get-started .cards {
  margin-top: 20px;
}

.get-started .card {
  display: block;
  float: left;
  width: 47.5%;
}

.get-started a {
  border-radius: 4px;
  font-family: HelveticaNeue;
  font-size: 16px;
  text-align: center;
  width: 100%;
  height: 50px;
  margin-top: 20px;
  display: block;
  text-decoration: none;
  line-height: 50px;
}

.get-started a.primary {
  background: #006FCF;
  color: #FFFFFF;
}

.get-started a.secondary {
  background: #FFFFFF;
  border: 1px solid #006FCF;
  color: #006FCF;
}

.info-tiles {
  background: #F7F8F9;
}
.info-tile {
  margin: 30px 10px 10px 10px;
}
.tile-header {
  margin-bottom: 5px;
  font-family: BentonSans-Book;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  line-height: 16px;
}
.tile-copy{
  margin-bottom: 5px;
  font-family: BentonSans-Book;
  font-size: 14px;
  color: #63666A;
  letter-spacing: 0;
  text-align: left;
  line-height: 22px;
}
.link{
  margin-bottom: 5px;
  font-family: BentonSans-Book;
  font-size: 14px;
  color: #006FCF;
  letter-spacing: 0;
  text-align: left;
}
.info-tile_footnote{
  margin-bottom: 5px;
  font-family: BentonSans-Book;
  font-size: 10px;
  color: #63666A;
  letter-spacing: 0;
  text-align: left;
  line-height: 16px;
}
