.menu-banner {
  display: flex;
}
.brand-logo {
  width: 85%;
}
.drop-down-button {
  width:7%;
  margin:auto;
  cursor: pointer;
}

.hide-menu {
  display: none;
}
.dropdown-menu {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
.dropdown-menu ul{
  margin: 0;
  color: #006fcf;
  font-weight: normal;
  font-family: BentonSans-Lt, helvetica, sans-serif;
  font-size: 4px;
  padding: 4px;
  list-style: none;
  background: #fff;
}
.dropdown-menu ul li{
  height: 10px;
  border-bottom: gray solid 0.1px;
  margin: 4px;
}
