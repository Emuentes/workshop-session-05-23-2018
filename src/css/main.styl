@import './test.css';
@import '../partials/hero/hero.css';
@import '../partials/get-started/get-started.styl';
@import '../partials/info-tiles/info-tiles.css';

@font-face {
  font-family: BentonSans-Lt;
  src: local('BentonSans-Lt');
  src: url(/assets/481b5db4-48a0-4c43-ae8b-fd1a0b7cb481-3.woff)
  format('woff');
  font-style: normal;
  font-weight: 400;
}
body {
font-family: 'Roboto', sans-serif;
  font-weight: 300;
  font-size: 1em;
}

h1 {
  margin: 1rem;
}

a {
  color: #006FCF;
}

.clear {
  clear: both;
}

.tracing-image {
  /*
  background: url(https://s3.invisionapp-cdn.com/k8s-private-aexp-cluster/screens/files/219575135.jpg?x-amz-meta-iv=3&response-cache-control=max-age%3D2419200&x-amz-meta-ck=f5908afbb337851d7f7e61ce5b6de08e&AWSAccessKeyId=AKIAIAWTUDIXJUYQSXEQ&Expires=1530403200&Signature=%2BrVZQKrj1BxT2pW8waA99u%2FBSIc%3D) no-repeat;
  */
  background-size: 100%;
  height: 3108px;
}
.menu-banner {
  display: flex;
}
.brand-logo {
  width: 85%;
}
.drop-down-button {
  width:7%;
  margin:auto;
  cursor: pointer;
}
.rotate-icon {
  transform: rotate(180deg);
}

.hide-menu {
  display: none;
}
.dropdown-menu {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
.dropdown-menu ul{
  margin: 0;
  color: #006fcf;
  font-weight: normal;
  font-family: BentonSans-Lt, helvetica, sans-serif;
  font-size: 18px;
  padding: 0;
  list-style: none;
  background: #fff;
  border: 0.1px solid #E6E6E6;
}
.dropdown-menu ul li{
  border-bottom: 0.1px solid #E6E6E6;
  padding: 18px;

}
.dropdown-menu ul li.menu-subtitle {
  margin-top: 18px;
}
.dropdown-menu ul li.menu-subtitle a{
  color: #777;
}

.dropdown-menu ul li.menu-sub-menu {
  padding-left: 0;
  padding-right: 0;
  margin-left: 20px;
  margin-right: 20px;
}
.dropdown-menu .login-button {
  font-weight: 400;
  text-align: center;
  vertical-align: middle;
  user-select: none;
  border: 1px solid transparent;
  margin-bottom: .625rem;
  padding: .5rem 2.5rem;
  font-size: 1rem;
  line-height: 1.46;
  border-radius: .25rem;
  color: #fff;
  background: #1274b8;
  position: relative;
  float: right;
  top: -9px;
}
.hero{
  color: #fff;
  height: 204px;
  padding: 32px 19px;
  position: relative;

  background: url(/assets/tracing-image.jpg) no-repeat;
  background-size: 100%;
  background-position: 0px -68px;
}

.hero-header {
  font-weight: 300;
  font-size: 1.7em;
  line-height: 1.3;
  letter-spacing: 0.7px;
  margin-bottom: 22px;
}

.hero-sub-header {
  font-size: .9em;
  font-weight: 300;
  line-height: 1.4em;
  margin-bottom: 16px;
}

.hero-tagline {
  font-size: 1.24em;
}

.square-btns {
  width: 100%;
  height: 222px;
  background-color: #F00;
  /*display: none;*/
}

.square-btn {
  float: left;
  height: 111px;
  width: 125px;
  background-color: #0F0;
}
.square-btn.blue {
  background-color: #1271cd;
}
