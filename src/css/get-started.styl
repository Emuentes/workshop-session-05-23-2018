.get-started {
  background-color: #fff;
  padding: 10% 5%;

  .head {
    font-family: BentonSans-Book;
    font-size: 24px;
    color: #4E5356;
    line-height: 30px;
  }

  .text {
    font-family: BentonSans-Book;
    font-size: 14px;
    color: #727272;
    letter-spacing: 0;
    line-height: 24px;
  }

  .cards {
    margin-top: 20px;

    .card {
      display: block;
      float: left;
      width: 47.5%;

      &:first-child {
        margin-right: 5%;
      }
    }
  }

  a {
    border-radius: 4px;
    font-family: HelveticaNeue;
    font-size: 16px;
    text-align: center;
    width: 100%;
    height: 50px;
    margin-top: 20px;
    display: block;
    text-decoration: none;
    line-height: 50px;

    &.primary {
      background: #006FCF;
      color: #FFFFFF;
    }

    &.secondary {
      background: #FFFFFF;
      border: 1px solid #006FCF;
      color: #006FCF;
    }
  }
}
